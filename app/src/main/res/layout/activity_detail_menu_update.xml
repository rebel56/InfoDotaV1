<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Menu.Detail.DetailMenuUpdate">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/detail_img_update"
            android:layout_width="391dp"
            android:layout_height="197dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/detail_title_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_img_update"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="@string/title5"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginStart="15dp" />

        <TextView
            android:id="@+id/detail_deskripsi_update"
            android:layout_width="396dp"
            android:layout_height="462dp"
            android:layout_below="@id/detail_title_update"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="25dp"
            android:textColor="#000000"
            android:text="@string/deskripsi4"
            android:textSize="15sp" />

    </RelativeLayout>
</ScrollView>